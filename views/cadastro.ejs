<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Cadastro</title>
</head>
<body>
    <%- include('./partials/header.ejs') %> 

    <main>
        <section class="cadastro">
            <div>
                <form action="/create" method="post">
                    <label for="nome">Nome:</label>
                    <input type="text" id="nome" name="nome" required>
                    <label for="diretor">Diretor:</label>
                    <input type="text" id="diretor" name="diretor" required>
                    <label for="img">Link da Imagem: </label>
                    <input type="url" name="img" id="img" required>
                    <label for="duracao">Duração:</label>
                    <input type="number" name="duracao" id="duracao" required>
                    <label for="anos">Ano:</label>
                    <input type="text" id="anos" name="anos" required>
                    <label for="iframe">Iframe do Video:</label>
                    <input type="text" id="iframe" name="iframe" required>
                    <button id="btnCadastrar" type="submit">Cadastrar</button>
                </form>
            </div>
        </section>
    </main>

        <%- include('./partials/footer.ejs') %> 
</body>
</html>